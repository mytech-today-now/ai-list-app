{
  "name": "@ai-todo/frontend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:visual": "vitest run src/__tests__/visual",
    "test:visual:update": "vitest run src/__tests__/visual --update-snapshots",
    "test:performance": "vitest run src/__tests__/performance",
    "test:accessibility": "vitest run src/__tests__/accessibility",
    "test:integration": "vitest run src/__tests__/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:lighthouse": "lighthouse http://localhost:5173 --output=json --output-path=./lighthouse-report.json",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "npx chromatic --project-token=your-chromatic-token"
  },
  "dependencies": {
    "@ai-todo/mcp-core": "file:../../packages/mcp-core",
    "@ai-todo/shared-types": "file:../../packages/shared-types",
    "@ai-todo/storage": "file:../../packages/storage",
    "@tanstack/react-query": "^5.8.0",
    "autoprefixer": "^10.4.16",
    "axios": "^1.6.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.294.0",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss": "^3.3.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "@storybook/addon-essentials": "^7.6.0",
    "@storybook/addon-interactions": "^7.6.0",
    "@storybook/addon-links": "^7.6.0",
    "@storybook/blocks": "^7.6.0",
    "@storybook/react": "^7.6.0",
    "@storybook/react-vite": "^7.6.0",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",

    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "chromatic": "^10.0.0",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "eslint-plugin-storybook": "^0.6.15",
    "happy-dom": "^12.10.3",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.0.4",
    "jest-image-snapshot": "^6.5.1",
    "lighthouse": "^11.4.0",
    "msw": "^2.10.2",
    "percy-playwright": "^1.0.4",
    "pixelmatch": "^5.3.0",
    "puppeteer": "^21.6.1",
    "storybook": "^7.6.0",
    "supertest": "^7.1.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^0.17.0",
    "vitest": "^0.34.6",
    "workbox-window": "^7.0.0"
  }
}
