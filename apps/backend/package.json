{
  "name": "@ai-todo/backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate:sqlite --config=./drizzle.config.ts",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "db:studio": "drizzle-kit studio --config=./drizzle.config.ts",
    "migrate": "tsx src/db/migrations/cli.ts",
    "migrate:status": "tsx src/db/migrations/cli.ts status",
    "migrate:up": "tsx src/db/migrations/cli.ts up",
    "migrate:rollback": "tsx src/db/migrations/cli.ts rollback",
    "migrate:optimize": "tsx src/db/migrations/cli.ts optimize",
    "migrate:backup": "tsx src/db/migrations/cli.ts backup"
  },
  "dependencies": {
    "@ai-todo/mcp-core": "file:../../packages/mcp-core",
    "@ai-todo/shared-types": "file:../../packages/shared-types",
    "@ai-todo/storage": "file:../../packages/storage",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "sqlite3": "^5.1.6",
    "pg": "^8.11.3",
    "drizzle-orm": "^0.29.0",
    "zod": "^3.22.4",
    "openai": "^4.20.0",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.12",
    "cli-table3": "^0.6.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/pg": "^8.10.7",
    "@types/node": "^20.9.0",
    "@types/jest": "^29.5.8",
    "@types/inquirer": "^9.0.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.1.0",
    "typescript": "^5.2.2",
    "drizzle-kit": "^0.20.0"
  }
}
