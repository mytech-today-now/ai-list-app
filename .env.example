# AI ToDo MCP - Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Environment
NODE_ENV=development
APP_NAME="AI ToDo MCP"
APP_VERSION=1.0.0
APP_DESCRIPTION="AI-Driven PWA Task Manager with Modular Command Protocol"

# Server Configuration
PORT=3001
HOST=localhost
BASE_URL=http://localhost:3001

# Frontend Configuration
VITE_API_URL=http://localhost:3001
VITE_APP_NAME="AI ToDo MCP"
VITE_APP_VERSION=1.0.0
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite (Development)
DATABASE_URL=sqlite:./data/ai-todo.db
SQLITE_DB_PATH=./data/ai-todo.db

# PostgreSQL (Production)
# DATABASE_URL=postgresql://username:password@localhost:5432/ai_todo_mcp
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=ai_todo_mcp
# POSTGRES_USER=your_username
# POSTGRES_PASSWORD=your_password
# POSTGRES_SSL=false

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=ai-todo-mcp
JWT_AUDIENCE=ai-todo-mcp-users

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_MAX_AGE=86400000

# Password Hashing
BCRYPT_ROUNDS=12

# API Keys
API_KEY_HEADER=X-API-Key
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=100

# =============================================================================
# AI & EXTERNAL SERVICES
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30000

# MCP Configuration
MCP_AGENT_TIMEOUT=30000
MCP_MAX_RETRIES=3
MCP_RETRY_DELAY=1000

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# Error Tracking
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=1.0.0

# Analytics
GOOGLE_ANALYTICS_ID=your-ga-id-here
MIXPANEL_TOKEN=your-mixpanel-token-here

# =============================================================================
# STORAGE & CACHING
# =============================================================================

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# File Storage
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_DESTINATION=./uploads

# =============================================================================
# EMAIL & NOTIFICATIONS
# =============================================================================

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@ai-todo-mcp.com

# Push Notifications
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:your-email@example.com

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Development Tools
ENABLE_CORS=true
ENABLE_MORGAN_LOGGING=true
ENABLE_HELMET=true
ENABLE_COMPRESSION=true

# Testing Configuration
TEST_DATABASE_URL=sqlite::memory:
TEST_JWT_SECRET=test-jwt-secret
TEST_OPENAI_API_KEY=test-openai-key
TEST_TIMEOUT=30000

# Debug Configuration
DEBUG=ai-todo-mcp:*
DEBUG_COLORS=true
DEBUG_DEPTH=2

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================

# Caching
CACHE_TTL=3600
CACHE_MAX_SIZE=100
ENABLE_RESPONSE_CACHE=true

# Compression
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# =============================================================================
# DEPLOYMENT & INFRASTRUCTURE
# =============================================================================

# Docker Configuration
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest

# Health Checks
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3

# Graceful Shutdown
SHUTDOWN_TIMEOUT=10000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
FEATURE_AI_SUGGESTIONS=true
FEATURE_REAL_TIME_SYNC=true
FEATURE_OFFLINE_MODE=true
FEATURE_ANALYTICS=false
FEATURE_BETA_FEATURES=false

# =============================================================================
# SECURITY HEADERS & CSP
# =============================================================================

# Content Security Policy
CSP_DEFAULT_SRC="'self'"
CSP_SCRIPT_SRC="'self' 'unsafe-inline' https://cdn.jsdelivr.net"
CSP_STYLE_SRC="'self' 'unsafe-inline' https://fonts.googleapis.com"
CSP_FONT_SRC="'self' https://fonts.gstatic.com"
CSP_IMG_SRC="'self' data: https:"
CSP_CONNECT_SRC="'self' https://api.openai.com"

# Security Headers
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# =============================================================================
# CI/CD & DEPLOYMENT
# =============================================================================

# Deployment Configuration
DEPLOYMENT_ENVIRONMENT=development
DEPLOYMENT_STRATEGY=rolling
DEPLOYMENT_TIMEOUT=600000

# CI/CD Integration
CI_ENVIRONMENT=false
GITHUB_TOKEN=your-github-token-here
GITHUB_REPOSITORY=your-username/ai-todo-mcp

# Quality Gates
QUALITY_GATES_ENABLED=true
COVERAGE_THRESHOLD=85
PERFORMANCE_THRESHOLD=90
SECURITY_SCAN_ENABLED=true

# Lighthouse CI
LHCI_GITHUB_APP_TOKEN=your-lighthouse-ci-token
LHCI_SERVER_BASE_URL=your-lighthouse-server-url
LHCI_TOKEN=your-lighthouse-token

# Deployment URLs
STAGING_URL=https://staging.ai-todo-mcp.com
STAGING_BACKEND_URL=https://api-staging.ai-todo-mcp.com
PRODUCTION_URL=https://ai-todo-mcp.com
PRODUCTION_BACKEND_URL=https://api.ai-todo-mcp.com

# Deployment Tokens
STAGING_DEPLOY_TOKEN=your-staging-deploy-token
PRODUCTION_DEPLOY_TOKEN=your-production-deploy-token

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Application Performance Monitoring
APM_ENABLED=false
APM_SERVICE_NAME=ai-todo-mcp
APM_ENVIRONMENT=development

# Error Tracking
ERROR_TRACKING_ENABLED=false
ERROR_TRACKING_DSN=your-error-tracking-dsn

# Metrics Collection
METRICS_ENABLED=false
METRICS_ENDPOINT=http://localhost:9090
METRICS_INTERVAL=15000

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Database Backup
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# File Backup
FILE_BACKUP_ENABLED=false
FILE_BACKUP_PATH=./file-backups
FILE_BACKUP_SCHEDULE=0 3 * * *
